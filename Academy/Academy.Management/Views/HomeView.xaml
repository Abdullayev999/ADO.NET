<UserControl x:Class="Academy.Management.Views.HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Academy.Management.Views"
             xmlns:t="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <t:Card Padding="10">
        <t:Card.Background>
            <ImageBrush ImageSource="/Resources/laptop.jpg"/>
        </t:Card.Background>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <Button Command="{Binding StudentsCommand}" BorderBrush="#C7CADB" BorderThickness="2" t:ShadowAssist.ShadowDepth="Depth4" Margin="10" Height="50"  FontSize="20" Content="Students"></Button>
            <Button Command="{Binding ProductsCommand}"  BorderBrush="#C7CADB" BorderThickness="2"  t:ShadowAssist.ShadowDepth="Depth4"    Margin="10" Height="50" FontSize="20" Content="Products"></Button>
        </StackPanel>
    </t:Card>
</UserControl>
